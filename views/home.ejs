<div id="container" class="container">

    <!--------------------
      entry banner
    ------------------->

    <div class="banner">
        <img src="public/images/homebg.jpg">
        <div class="banner-text">
            <h1>One Place to manage all your <p>Events</p>
            </h1>
        </div>
    </div>

    <!----------------
      Join Events
    ------------------>
    
    <div id="joineve">
        <div class="container2">
            <h1 class="sub-title">Join Current Events</h1>
            <% if(data.length > 0) {
                var k = 0;
                for(let i = 0; i < (data.length / 3); i++){ %>
                <div class="options">
                    <% for(let j = 0; j < Math.min(data.length,3); j++){%>
                            <div>
                                <a href="<%= link = data[k].link %>">
                                    <h2><%= name = data[k].name%></h2>
                                    <h4><%= dateTime = 'Date : ' + data[k].date + ' & Time : ' + data[k].time%></h4>
                                    <p><%= desc = data[k].descr %></p>
                                </a>
                            </div>
                    <% k++;} %>
                </div>
            <% } } else {%>
                <h2 style="text-align: center;">No Upcoming Events</h2>
                <% } %>
        </div>
    </div>

    <!----------------
        My Events
    ------------------>

    <% if(mydata.length > 0) {
                var k = 0; %>
    <div id="myeve">
        <div class="container2">
            <h1 class="sub-title">My Events</h1>
            <% for(let i = 0; i < (mydata.length / 3); i++){ %>
            <div class="options">
                <% for(let j = 0; j < Math.min(mydata.length,3); j++){%>
                <div>
                    <a href="<%= link = mydata[k].link %>">
                        <h2><%= name = mydata[k].name%></h2>
                        <h4><%= dateTime = 'Date : ' + mydata[k].date + ' & Time : ' + mydata[k].time%></h4>
                        <p><%= desc = mydata[k].descr %></p>
                    </a>
                </div>
                <% k++;} %>
            </div>
            <% } %>
        </div>
    </div>
    <% } %>

</div>