<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Dashboard</title>
    <link rel="stylesheet" src="../public/CSS/style.css">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/dd9e022d1f.js" crossorigin="anonymous"></script>
    <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="CSS\estart.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap');

* {
    font-family: 'Ubuntu', sans-serif;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    min-height: 100vh;
    background: #ededed;
    color: #232323;
}

/*-------------------
  Navigation sidebar
--------------------*/

.navigation {
    position: fixed;
    inset: 20px;
    background-color: rgb(119, 22, 255);
    width: 80px;
    border-left: 10px solid rgb(119, 22, 255);
    border-top: 15px solid rgb(119, 22, 255);
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
    border-radius: 50px;
    overflow: hidden;
    transition: 0.5s
}

.navigation.active {
    width: 300px;
    border-radius: 20px;
}

.navigation ul {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.navigation ul li {
    position: relative;
    list-style: none;
    width: 100%;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
    transition: 0.2s background;
}

.navigation ul li:hover {
    background: #fff;
    color: #000;
}

.navigation ul li a {
    position: relative;
    display: block;
    width: 100%;
    display: flex;
    text-decoration: none;
    color: #fff;
}

.navigation ul li:nth-child(1) {
    top: 20px;
    margin-bottom: 40px;
    background: none;
}

.navigation ul li:hover:not(:first-child) a {
    color: #000;
}


/*-------------------
    Account tab
--------------------*/

.navigation ul li a .acc_img {
    position: relative;
    display: block;
    min-width: 60px;
    height: 90px;
    line-height: 70px;
    text-align: center;
}

.navigation ul li a .acc_img i {
    font-size: 1.75em;
}

.navigation ul li a .acc_name {
    position: relative;
    display: block;
    padding: 0 10px;
    height: 60px;
    line-height: 60px;
    text-align: start;
    white-space: nowrap;
}

/*-------------------
   Remaining Tabs
--------------------*/

.navigation ul li a .icon {
    position: relative;
    display: block;
    min-width: 60px;
    height: 60px;
    line-height: 70px;
    text-align: center;
}

.navigation ul li a .icon i {
    font-size: 1.25em;
}

.navigation ul li a .title {
    position: relative;
    display: block;
    padding: 0 10px;
    height: 60px;
    line-height: 60px;
    text-align: start;
    white-space: nowrap;
}

.navigation ul li a .title i {
    align-items: right;
}

.highlight{
    background: #fff;
    color: #000;
}

.highlight a span, .highlight a span i{
    color: #000;
}

/*-------------------
  toggle sidebar
--------------------*/

.toggle {
    position: fixed;
    bottom: 30px;
    left: 35px;
    width: 50px;
    height: 50px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.15);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 20;
}

.toggle::before {
    content: '';
    position: absolute;
    width: 26px;
    height: 3px;
    border-radius: 3px;
    background: #ffaa00;
    transform: translateY(-5px);
    transition: 1s;
}

.toggle::after {
    content: '';
    position: absolute;
    width: 26px;
    height: 3px;
    border-radius: 3px;
    background: #ffaa00;
    transform: translateY(5px);
    transition: 1s;
}

.navigation.active .toggle::before {
    transform: translateY(0px) rotate(-405deg);
}

.navigation.active .toggle::after {
    transform: translateY(0px) rotate(225deg);
}

/*-------------------
  Drop down elements
--------------------*/

.ddmenu {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    column-gap: 0.5rem;
    cursor: pointer;
    border-radius: 5px;
    border: none;
    position: relative;

}

.dropdown {
    position: absolute;
    width: 200px;
    border-radius: 10px;
    margin-top: 0.3rem;
    background: white;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.5, 1);

    transform: translateY(0.5rem);
    visibility: hidden;
    opacity: 0;
    z-index: 3;
    overflow: none;
}

.dropdown a {
    display: flex;
    align-items: center;
    column-gap: 0.5rem;
    padding: 0.8rem 1rem;
    text-decoration: none;
    color: black;
    border-radius: 10px;
}

.dropdown a:hover {
    background-color: #b9b9b9;
}

.show {
    transform: translateY(0rem);
    visibility: visible;
    opacity: 1;
}

.arrow {
    transform: rotate(180deg);
    transition: 0.2s ease;
}
    </style>

</head>


<body>
    <div class="navigation">
        <ul>
            <li>
                <a href="#">
                    <span class="acc_img"><i class="fa-solid fa-user"></i></span>
                    <span class="acc_name"><%= name %></span>
                </a>
            </li>
            <li onclick="light()">
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-house"></i></span>
                    <span class="title">Home</span>
                </a>
            </li>
            <li class="club">
                <div class="ddmenu" id="ddmenu">

                    <a href="#">
                        <span class="icon"><i class="fa-solid fa-users"></i></span>
                        <span class="title">Clubs <i class="bx bx-chevron-down" id="arrow"></i></span>
                    </a>

                </div>
                <div class="dropdown" id="dropdown">
                    <a href="#myclubs">
                        <i class="fa-solid fa-person-shelter"></i>
                        My Clubs
                    </a>
                    <a href="#joinclubs">
                        <i class="fa-solid fa-list"></i>
                        Join Clubs
                    </a>
                </div>

            </li>
            <li onclick="light()">
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-calendar-day"></i></span>
                    <span class="title">View Calendar</span>
                </a>
            </li>
            <li onclick="light()">
                <a href="http://127.0.0.1:8080/create-event">
                    <span class="icon"><i class="fa-solid fa-circle-play"></i></span>
                    <span class="title">Create Event</span>
                </a>
            </li>
            <li class="" onclick="light()">
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-handshake"></i></span>
                    <span class="title">Join Event</span>
                </a>
            </li>
            <li class="logout">
                <a href="http://127.0.0.1:8080/logout">
                    <span class="icon"><i class="fa-solid fa-arrow-right-from-bracket"></i></span>
                    <span class="title">Sign Out</span>
                </a>
            </li>
        </ul>
        <div class="toggle"></div>
    </div>

    <%- include(dir) %>

    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>

    <script>
        const dropdownBtn = document.getElementById("ddmenu");
        const dropdownMenu = document.getElementById("dropdown");
        const toggleArrow = document.getElementById("arrow");
        const toggleDropdown = function () {
            dropdownMenu.classList.toggle("show");
            toggleArrow.classList.toggle("arrow");
        };
        dropdownBtn.addEventListener("click", function (e) {
            e.stopPropagation();
            toggleDropdown();
        });
    </script>
    <script>
        let navigation = document.querySelector('.navigation');
        let toggle = document.querySelector('.toggle');
        toggle.addEventListener('click', () => {
            if(toggle.classList.contains('active')){
                toggle.classList.remove('active');
            }
        })
        toggle.onclick = function () {
            navigation.classList.toggle('active');
        }
    </script>
    <script>
        let lis = document.getElementsByTagName('li');
        function light(){
            for(li of lis){
                li.classList.remove('highlight');
            }
            event.currentTarget.classList.add('highlight');
        }
    </script>

</body>

</html>