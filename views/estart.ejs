    <!--------------------
           Form
    -------------------->

    <div class="container">
        <div class="hero-area">
            <div class="row">

                <form action="/create_event" method="POST">
                    <br>
                    <h1>Create Event</h1><br><br>

                    <fieldset>
                        <legend><span class="number">1</span> &nbsp;&nbsp;Event Basic Info</legend><br>
                        <div class="sname"><label>Event Name:</label>
                            <input type="text" id="ename" name="ename" placeholder=" " required>
                        </div>
                        <div class="sname"><label>Club Name:</label><select name="cname" required>
                                <option value="GDSC">GDSC</option>
                                <option value="Geeks_for_Geeks">Geeks for Geeks</option>
                                <option value="IIC">IIC</option>
                                <option value="E-Cell">E-Cell</option>
                            </select>
                        </div>
                        <div class="input_group">
                            <div class="col-third"><label>Date of Event:</label><input required id="dd" name="dd"
                                    type="number" placeholder="DD" min="1" max="31" onchange="validate()">
                            </div>
                            <div class="col-third"><label>&nbsp;</label><input required id="mm" name="mm" type="number"
                                    placeholder="MM" min="1" max="12" onchange="validate()">
                            </div>
                            <div class="col-third"><label>&nbsp;</label><input required id="yy" name="yyyy"
                                    type="number" placeholder="YYYY" min="2024" onchange="validate()">
                            </div>
                            <div class="col-third "><label>Time of Event:</label><select required name="start_time">
                                    <option value="9:00am">9:00am</option>
                                    <option value="10:00am">10:00am</option>
                                    <option value="11:00am">11:00am</option>
                                    <option value="12:00pm">12:00pm</option>
                                    <option value="1:00pm">1:00pm</option>
                                    <option value="2:00pm">2:00pm</option>
                                    <option value="3:00pm">3:00pm</option>
                                    <option value="4:00pm">4:00pm</option>
                                </select>
                            </div>
                            <div class="col-third"><label>&nbsp;</label><select name="end_time">
                                    <option value="10:00am">10:00am</option>
                                    <option value="11:00am">11:00am</option>
                                    <option value="12:00pm">12:00pm</option>
                                    <option value="1:00pm">1:00pm</option>
                                    <option value="2:00pm">2:00pm</option>
                                    <option value="3:00pm">3:00pm</option>
                                    <option value="4:00pm">4:00pm</option>
                                    <option value="5:00pm">5:00pm</option>
                                </select>
                            </div>
                        </div>
                        <span id="warn" style="position: absolute;margin-left:-645px;color: red;"></span>
                        <label>Description:</label>
                        <textarea name="description"></textarea>

                        <div class="col-third new">
                            <label>Venue of Event:</label>
                            <select name="start_venue">
                                <option value="Seminar_hall_1">Seminar hall 1</option>
                                <option value="Seminar_hall_2">Seminar hall 2</option>
                                <option value="Lab 1">Lab 1</option>
                                <option value="Lab 2">Lab 2</option>
                            </select>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend><span class="number">2</span>&nbsp;&nbsp; Event Requirements</legend><br>
                        <label>Permissions:</label>
                        <textarea name="permission"
                            placeholder="Tag facaulties (@facultyUID) to send a permission request" required></textarea>
                        <br>
                        <label>Enter Event form Link:</label>
                        <input type="url" name="form" required>
                    </fieldset>
                    <br><br>
                    <button id="sub-btn" type="submit">Submit</button>
                    <br><br><br>
                </form>

            </div>
        </div>
        <img src="images\form-pic.jpg">
    </div>

    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    <script>
        var date = new Date();
        var datedd = date.getDate();
        var datemm = date.getMonth() + 1;
        var dateyy = date.getFullYear();
        function validate() {
            let dd = document.getElementById('dd');
            let mm = document.getElementById('mm');
            let yy = document.getElementById('yy');
            let btn = document.getElementById('sub-btn');
            let warn = document.getElementById('warn');
            try {
                if (yy.value % 4 === 0) {
                    if (mm.value == 2) {
                        if (dd.value > 29) {
                            dd.value = 29;
                        }
                    }
                } else if (mm.value == 2) {
                    if (dd.value > 28) {
                        dd.value = 28;
                    }
                }

                if (mm.value in [1, 3, 5, 7, 8, 10, 12]) {
                    if (dd.value > 31) {
                        dd.value = 31;
                    }
                } else if (mm.value != 2) {
                    if (dd.value > 30) {
                        dd.value = 30;
                    }
                }

                if (dd.value) {
                    if (dd.value < datedd) {
                        warn.innerHTML = 'Time Machine is not invented yet.';
                        btn.disabled = true;
                    } else {
                        warn.innerHTML = '';
                        btn.disabled = false;
                    }
                }
                if (mm.value) {
                    if (mm.value > 12) {
                        mm.value = 12;
                    } else if (mm.value < datemm) {
                        warn.innerHTML = 'Time Machine is not invented yet.';
                        btn.disabled = true;
                    } else {
                        warn.innerHTML = '';
                        btn.disabled = false;
                    }
                }
                if (yy.value) {
                    if (yy.value < dateyy) {
                        warn.innerHTML = 'Time Machine is not invented yet.';
                        btn.disabled = true;
                    } else {
                        warn.innerHTML = '';
                        btn.disabled = false;
                    }
                }

            } catch (e) {
                console.log(e);
            }
        }
    </script>
